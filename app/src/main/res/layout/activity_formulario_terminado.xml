<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jeanpierrepachecoavila.proyecto_android.FormularioTerminado">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/pet"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:padding="22dp"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="false"
        android:layout_alignWithParentIfMissing="true"
        android:nestedScrollingEnabled="false"
        android:onClick="setListFooter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Â¡Gracias!"
        android:id="@+id/textView"
        android:textColor="#ff02aaad"
        android:layout_marginTop="38dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir al inicio"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/imageView"
        android:onClick="inicio"
        android:layout_centerHorizontal="true"
        android:background="#ffffd31a"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
