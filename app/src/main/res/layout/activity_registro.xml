<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jeanpierrepachecoavila.proyecto_android.Registro">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:accessibilityLiveRegion="polite"
        android:elegantTextHeight="true"
        android:editable="true"
        android:enabled="true"
        android:layout_alignWithParentIfMissing="true"
        android:hint="usuario"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="none|textPassword"
        android:ems="10"
        android:id="@+id/contrasena"
        android:editable="true"
        android:elegantTextHeight="true"
        android:layout_alignWithParentIfMissing="false"
        android:password="false"
        android:hint="contraseÃ±a"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        style="@android:style/Animation.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/registro"
        android:background="#ff02aaad"
        android:layout_alignWithParentIfMissing="true"
        android:onClick="registraNuevo"
        android:width="130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/correo"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true"
        android:hint="correo" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombre"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="nombre" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/petfriendly"
        android:layout_above="@+id/nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/correo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="edad" />


</RelativeLayout>
